{
  "name": "bulychev/enums-helper",
  "type": "library",
  "description": "Helpers for enums",
  "keywords": ["enum","enums","helper"],
  "homepage": "https://github.com/EgorBulychev/EnumsHelper",
  "license": "MIT",
  "authors": [
    {
      "name": "Egor Bulychev",
      "email": "egor@bulychev.info"
    }
  ],
  "require": {
    "php": ">=8.1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5.2",
    "phpstan/phpstan": "^1.9",
    "friendsofphp/php-cs-fixer": "^3.13"
  },
  "autoload": {
    "psr-4": { "Bulychev\\EnumsHelper\\": "src/" }
  },
  "autoload-dev": {
    "psr-4": { "Bulychev\\Tests\\EnumsHelper\\": "tests/" }
  },
  "scripts": {
    "test": "./vendor/bin/phpunit",
    "phpstan": "./vendor/bin/phpstan --xdebug",
    "php-cs-fixer": "./vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php"
  }
}
