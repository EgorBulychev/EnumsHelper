{
  "name": "bulychev/enums",
  "type": "library",
  "description": "Enums Helper Traits for PHP 8.1+",
  "keywords": ["enum","enums","helper"],
  "homepage": "https://github.com/EgorBulychev/EnumsHelper",
  "license": "MIT",
  "authors": [
    {
      "name": "Egor Bulychev",
      "email": "egor@bulychev.info"
    }
  ],
  "require": {
    "php": "^8.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5.2",
    "phpstan/phpstan": "^1.9",
    "friendsofphp/php-cs-fixer": "^3.13"
  },
  "autoload": {
    "psr-4": { "Bulychev\\Enums\\": "src" }
  },
  "autoload-dev": {
    "psr-4": { "Bulychev\\Enums\\Tests\\": "tests" }
  },
  "scripts": {
    "test": "./vendor/bin/phpunit",
    "phpstan": "./vendor/bin/phpstan analyse --xdebug",
    "php-cs-fixer": "./vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php"
  }
}
